<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="email_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">#484848</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="email_edittext_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:elevation">50dp</item>
        <item name="android:layout_marginTop">35sp</item>
        <item name="android:layout_marginHorizontal">30sp</item>
        <item name="android:background">@drawable/background_corners_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
</resources>